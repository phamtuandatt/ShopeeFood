@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<link rel="stylesheet" href="~/css/css_login_shopee.css" />

<style>
    .btn-danger {
        background-color: #ee4d2d;
    }
</style>


@using (Html.BeginForm())
{
    <div style="background-color: #ebebeb;" class="container-fluid">
        <div class="container">
            <div class="now-login">
                <div class="contents">
                    <div class="title">Đăng nhập</div>
                    <div class="login-via">
                        <div class="item phone">
                            <span class="fas fa-mobile-alt"></span>Số điện thoại
                        </div>
                        <div class="item fb">
                            <span class="fab fa-facebook-f"></span>Facebook
                        </div>
                        <div class="item plus">
                            <i class="fab fa-google-plus-g"></i>Google
                        </div>
                    </div>
                    <p class="text">Hoặc đăng nhập bằng tài khoản của bạn</p>
                    <div class="mb-3">
                        <input type="text" class="form-control" id="email" name="email" placeholder="Tên đăng nhập hoặc Email">
                    </div>
                    <div class="mb-3">
                        <input type="password" class="form-control" id="password" name="password" placeholder="Mật khẩu">
                    </div>
                    <div class="form-group clearfix">
                        <div class="float-left">
                            <input type="checkbox" id="RememberMe" checked="">
                            <label for="RememberMe">Lưu thông tin đăng nhập</label>
                        </div>
                        <span class="float-right">
                            <a style="text-decoration: none;" href="~/Customer/ForgotPassword">Quên mật khẩu?</a>
                        </span>
                    </div>
                    <div class="d-grid gap-2">
                        <button class="btn btn-danger" type="submit">ĐĂNG NHẬP</button>
                    </div>
                    <div style="padding-top:10px" class="d-grid gap-2">
                        <a class="btn btn-secondary" href="~/Customer/Register">ĐĂNG KÝ</a>
                    </div>

                    <br>
                    <div class="login-mess-policy">
                        Chúng tôi không sử dụng thông tin của bạn với bất kỳ mục đích nào. Bằng cách đăng nhập hoặc đăng ký, bạn đồng ý với
                        <a style="color: #0495ba; border-bottom: 2px solid; text-decoration: none !important;" target="_blank" href="https://shopeefood.vn/gioi-thieu#footer-bottom">Chính sách quy định của Foody</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}