
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<link rel="stylesheet" href="~/css/css_login_shopee.css" />

@using (Html.BeginForm())
{
    <div style="width: 100%; height: 100%; background-color: #ebebeb;">
        <div class="now-login">
            <div class="contents">
                <div class="title">ĐẶT LẠI MẬT KHẨU</div>

                <div class="mb-3">
                    <input type="text" class="form-control" id="email" name="email" placeholder="Địa chỉ Email">
                </div>
                <div class="mb-3">
                    <input type="password" class="form-control" id="email" name="password" placeholder="Mật khẩu">
                </div>
                <div class="mb-3">
                    <input type="password" class="form-control" id="email" name="confirm-password" placeholder="Xác nhận mật khẩu">
                </div>
                <div class="d-grid gap-2">
                    <button class="btn btn-primary" type="submit">XÁC NHẬN</button>
                </div>

                <br>
                <div class="login-mess-policy">
                    Chúng tôi không sử dụng thông tin của bạn với bất kỳ mục đích nào. Bằng cách đăng nhập hoặc đăng ký, bạn đồng ý với
                    <a style="color: #0495ba; border-bottom: 2px solid; text-decoration: none !important;" target="_blank" href="https://shopeefood.vn/gioi-thieu#footer-bottom">Chính sách quy định của Foody</a>
                </div>
            </div>
        </div>
    </div>
}


