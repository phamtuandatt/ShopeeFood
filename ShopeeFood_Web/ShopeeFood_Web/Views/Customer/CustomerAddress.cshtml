@model IEnumerable<ShopeeFood_Web.Models.CustomerAddressModel>

@{
    ViewData["Title"] = "CustomerAddress";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

<link rel="stylesheet" href="~/css/css_management_profile_user_shopee.css" />

<div class="container" style="padding-top:75px">
    <!-- LEFT -->
    <div class="now-navigation-profile">
        <div class="header-profile">
            <div class="row align-items-center">
                <div class="col-3">
                    <img class="avatar-circle" src="https://images.foody.vn/usr/g1825/18244862/avt/s200x200/beauty-upload-api-foody-avatar-2d03099d-e7ec-49cf-8e37-c2aa6c719c87-191126163011.jpg" alt="Đạt Phạm">
                </div>
                <div class="col txt-bold font15">Đạt Phạm</div>
            </div>
        </div>
        <div class="navigation-profile" style="text-decoration: none; color:black">
            <a id="account" onclick="ReloadPartial(0)" class="item-navigation active" title="Cập nhật tài khoản" href="~/Customer/Profile">
                <div class="row">
                    <div class="col-2">
                        <svg class="fas" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16">
                            <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                        </svg>
                    </div>
                    <div class="col">Cập nhật tài khoản</div>
                    <div class="col-2">
                        <i class="icon-arrow-thin right"></i>
                    </div>
                </div>
            </a>
            <a id="address" onclick="ReloadPartial(1)" style="text-decoration: none; color:black" class="item-navigation" title="Cập nhật tài khoản" href="~/Customer/CustomerAddress">
                <div class="row">
                    <div class="col-2">
                        <svg class="fas" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart-check-fill" viewBox="0 0 16 16">
                            <path d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1H.5zM6 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm7 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm-1.646-7.646-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L8 8.293l2.646-2.647a.5.5 0 0 1 .708.708z" />
                        </svg>
                    </div>
                    <div class="col">Thông tin tài khoản</div>
                    <div class="col-2">
                        <i class="icon-arrow-thin right"></i>
                    </div>
                </div>
            </a>
        </div>
    </div>
    <!-- RIGHT -->

    <div style="height:1000px" class="now-detail-profile">
        <div class="header-user-profile">Thông tin người dùng</div>
        <div id="partial_zone_customer" class="content-user-profile">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.CustomerAddressId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CustomerId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.RemmemberName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Address)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Phone)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CustomerAddressId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CustomerId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RemmemberName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Phone)
                            </td>
                            <td>
                                <span class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                    SỬA
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div style="margin:50px auto 0 auto; display: table;" class="modal-dialog">
        <div style="width: fit-content;" class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">CẬP NHẬT THÔNG TIN</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div style="width: 750px; margin: auto;" class="row">
                    <div class="col-md-3 col-sm-12 col-xs-12">
                        <div class="form-group" style="margin-bottom:10px">
                            <label style="font-size: smaller;" class="control-label" for="UserName">Tên gợi nhớ</label>
                            <div class="col">
                                <input style="border-radius: 0; border-bottom: 1px solid black; border-left: none; border-right: none; border-top: none;" type="text" class="form-control" id="UserName" name="username" placeholder="Họ và tên">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-9 col-sm-12 col-xs-12">
                        <div class="form-group" style="margin-bottom:10px">
                            <label style="font-size: smaller;" class="control-label" for="UserName">Địa chỉ</label>
                            <div class="col">
                                <input style="border-radius: 0; border-bottom: 1px solid black; border-left: none; border-right: none; border-top: none;" type="text" class="form-control" id="UserName" name="username" placeholder="Họ và tên">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>



