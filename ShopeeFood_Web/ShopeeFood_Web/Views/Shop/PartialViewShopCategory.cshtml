@model IEnumerable<ShopeeFood_Web.Models.ShopModel>


<link rel="stylesheet" href="~/css/css_productCategory.css" />

@foreach (var item in Model)
{
    <div class="item-restaurant">
        <a target="_blank" class="item-content" href="~/Shop/ShopDetails?ShopId=@item.ShopId">
            <div class="img-restaurant">
                <img src="@item.ShopImage" class="">
            </div>
            <div class="info-restaurant">
                <div class="info-basic-res">
                    <h4 class="name-res" title="@item.ShopName">
                        <span class="icon icon-quality-merchant" title="Đây là 1 trong những Merchants được đánh giá cao trong ShopeeFood"></span>@item.ShopName
                    </h4>
                    <div class="address-res" title="@item.Address">@item.Address</div>
                </div>
                <p class="content-promotion"><i class="fas fa-tag"></i> Giảm hết 20%</p>
                <div class="opentime-status">
                    <span class="stt online" title="Mở cửa" style="color: rgb(35, 152, 57); background-color: rgb(35, 152, 57);"></span>
                </div>
            </div>
        </a>
    </div>
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>

<script>
    var msg = "@((string)ViewBag.St)";

    if (msg != null && msg != "") {
        swal({
            title: "Message",
            text: msg,
            icon: "success",
        });
    }
</script>