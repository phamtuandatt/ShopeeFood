<!-- Modal -->
<div class="modal fade" id="showAddressModal" tabindex="5" aria-labelledby="showAddressModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="max-width:1000px">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #ebebeb;">
                <h5 class="modal-title" id="showAddressModalLabel" style="color:#464646">Địa chỉ giao hàng</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            
            <div id="cusAddressPartial" class="modal-body" style="overflow:auto; height: 200px">
                <!-- Show partial View CusAdđ-->
            </div>
      
            <div style="border-top: .5px solid #ebebeb" class="row">
                <i class="fas fa-map-pin col-1" style="padding: 19px 0 10px 50px;"></i>
                <a href="#" class="col-11" style="padding: 15px 0 10px 0; display: block; text-decoration:none">Tìm trên bản đồ</a>
            </div>
        </div>
    </div>
</div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>

<script>
    $(document).on("click", ".showAdd", function () {
        $.ajax({
            url: "@Url.Action("CusAddressHome", "Shop")",
            type: "GET",
            success: function (response) {
                $('#cusAddressPartial').load('/Shop/CusAddressHome')
            }
        });
    });
</script>

<script>
    var msg = "@((string)ViewBag.shop)";

    if (msg != null && msg != "") {
        swal({
            title: "Message",
            text: msg,
            icon: "success",
        });
    }
</script>


